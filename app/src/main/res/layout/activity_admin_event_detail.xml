<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.dudgns0507.mpay.Activity.AdminEventDetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/uiGrey"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dashboard_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white_48dp"
            android:layout_weight="1"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <io.github.dudgns0507.mpay.widget.NBBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="그룹명 여기"
            android:textSize="@dimen/uiTitle"
            android:layout_weight="1"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings_white_48dp"
            android:layout_weight="1"
            android:visibility="invisible"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
