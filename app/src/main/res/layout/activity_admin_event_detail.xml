<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.dudgns0507.mpay.Activity.AdminEventDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/uiGrey">
            <ImageView
                android:id="@+id/color_bar"
                android:layout_width="@dimen/colorbar"
                android:layout_height="match_parent"
                android:background="@color/palette1"/>
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_white_48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <io.github.dudgns0507.mpay.widget.NBBTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="title"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/uiTitle" />
            <io.github.dudgns0507.mpay.widget.NBTextView
                android:id="@+id/title_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/uiDesc"
                android:layout_marginTop="5dp"
                android:text="title_small(상위 그룹)"
                android:textColor="@color/textWhite"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center"
                android:background="@color/uiWhite"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">
                <io.github.dudgns0507.mpay.widget.NBBTextView
                    android:id="@+id/current_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="current_money"
                    android:textColor="@color/uiBlack"
                    android:textSize="@dimen/receiptInfo" />
                <!--(현재 모인 돈)원 / (총액)원-->
                <io.github.dudgns0507.mpay.widget.NBTextView
                    android:id="@+id/due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/receiptExplanation"
                    android:layout_gravity="right"
                    android:text="due_date"
                    android:textColor="@color/uiBlack"
                    android:layout_marginTop="10dp"/>
                <!--*월 *일 마감-->
                <io.github.dudgns0507.mpay.widget.NBTextView
                    android:id="@+id/party"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/receiptExplanation"
                    android:layout_gravity="right"
                    android:text="party"
                    android:textColor="@color/uiBlack"
                    android:layout_marginTop="6dp"/>
                <!--*명 참여-->
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp">
        <io.github.dudgns0507.mpay.widget.NBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잔여"
            android:textSize="@dimen/receiptInfo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:textColor="@color/textWhite"/>
        <io.github.dudgns0507.mpay.widget.NBTextView
            android:id="@+id/leftover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leftover"
            android:textSize="@dimen/receiptInfo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="@color/textRed"/>
        <!--00000원-->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:id="@+id/hurry_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_blue"/>
            <io.github.dudgns0507.mpay.widget.NBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="독촉"
                android:textSize="@dimen/normal"
                android:textColor="@color/textWhite"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/conclude_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_red"/>
            <io.github.dudgns0507.mpay.widget.NBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="마감"
                android:textSize="@dimen/normal"
                android:textColor="@color/textWhite"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
