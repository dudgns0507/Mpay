<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.dudgns0507.mpay.Activity.EventListActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/uiGrey"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white_48dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <io.github.dudgns0507.mpay.widget.NBBTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/uiTitle"
            android:layout_weight="1"/>

        <Space
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="@dimen/uiBudget"
            android:text="자금 : 000000원"
            android:background="@color/uiGrey"
            android:layout_marginBottom="10dp" />
        <!--client only function-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <!--admin only function-->
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/add_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_white_48dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/toss_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/toss"
                android:layout_weight="1"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/urge_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_alert_white_48dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/people_btn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_people_white_48dp"
                android:layout_weight="1"/>
            <!--그룹원 관리-->
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/background"></ListView>
</LinearLayout>
